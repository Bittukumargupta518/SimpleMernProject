<%-include('./base/header.ejs') %>
 <%-include ('./base/nave.ejs') %>
   <div class ="container">
       <div class="alert text-center bg-primary my-3" style="color: azure;">
            <h5> Add Student </h5>

        </div>
   </div>
    <div class ="container">
      <table class ="table text-center">
        <thead>
          <tr>
            <th>Roll no</th>
            <th>Name</th>
            <th>Mother Name</th>
            <th>Father Name</th>
            <th>Course</th>
            <th>Branch</th>
            <th>Actions</th>
         </tr>
        </thead>
        <tbody>
          <% students.forEach((student)=>{ %>
            <tr>
               <td><%= student.RollNo %></td>
               <td><%= student.StudentName %></td>
               <td><%= student.MotherName %></td>
               <td><%= student.FatherName %></td>
               <td><%= student.Course %></td>
               <td><%= student.Branch %></td>
                <td>
                  <a href="/edit/student/page/<%=student._id%>" class="btn btn-warning">Edit</a>
                  <a href="/delete/student/<%= student._id %>" class="btn btn-danger">Delete </a>
                </td>        
            </tr>
           <% }) %>
        </tbody>
      </table>
    </div>
 <%-include('./base/footer.ejs') %>